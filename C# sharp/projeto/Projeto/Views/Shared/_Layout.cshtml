<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Projeto"] Projeto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/brands.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/solid.min.css"/>
    <link rel="stylesheet" href="~/js/site.js" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/signup.css" />
    <link rel="stylesheet" href="~/css/login.css"/>

</head>
<body>
    <header>
        <nav class="navbar text-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="gl" src="~/img/gl.png" width="35" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="hamburger d-none float-right">
                    <img src="~/img/201.png">
                </div>

                <div class="d-sm-inline-flex flex-sm-row-reverse links">
                    <a class="nav-link text-light float-left" asp-area="" asp-controller="User" asp-action="Create">Registrar-se</a>
                    <a class="nav-link text-light float-left" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                    <a class="nav-link text-light float-left" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>
    

    <footer class="border-top">
        <div class="container">
            <section class="menus">

                <div class="row p-0">

                    <div class="col-md-4 col-sm-12 col-12">

                        <h3 class="my-2 text-light text-center pt-1"><b>Páginas</b></h3>
                        <div class="link-resposive text-left ">
                            <a class="link text-light d-block ml-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <a class="link text-light d-block ml-5" asp-area="" asp-controller="Contact" asp-action="Contact">Contato</a>
                        </div>

                    </div>

                    <div class="col-md-4 col-sm-12 col-12">

                        <h3 class="my-2 text-light text-center pt-1"><b>Informações</b></h3>
                        <div class="link-resposive text-left">
                            <a href="#" class="text-light ml-5">Privacidade</a>
                        </div>

                    </div>

                    <div class="col-md-4 col-sm-12 col-12">
                        <div class="row">
                            <h3 class="my-2 text-light text-center pt-1 col-12"><b>Redes Sociais</b></h3>
                            <div class="col-6">
                                <a href="#" class=" float-right">
                                    <i class="fab fa-facebook-square"></i>
                                </a>
                            </div>

                            <div class="col-6 text-center">
                                <a href="#" class="float-left">
                                    <i class="fab fa-instagram-square"></i>
                                </a>
                            </div>

                            <div class="col-6">
                                <a href="#" class="float-right">
                                    <i class="fab fa-whatsapp"></i>
                                </a>
                            </div>


                            <div class="col-6">
                                <a href="#" class="float-left">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </div>
                        </div>

                    </div>

                </div>

            </section>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
